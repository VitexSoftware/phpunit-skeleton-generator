#!/usr/bin/make -f

export DH_VERBOSE = 1

%:
	dh $@

override_dh_clean:
	composer update
	rm -f phpunit-skeleton-generator.phar
	dh_clean

override_dh_prep:
	php -d phar.readonly=off /usr/bin/phar-composer -n build --ansi phpunit-skelgen
	dh_prep

override_dh_install:
	dh_install
	mv debian/phpunit-skelgen/usr/bin/phpunit-skeleton-generator.phar debian/phpunit-skelgen/usr/bin/phpunit-skelgen


